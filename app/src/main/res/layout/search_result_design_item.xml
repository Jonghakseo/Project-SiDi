<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_design"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_country"
                android:layout_width="35dp"
                android:layout_height="20dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/serverIndex"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/designNum"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/registrationNum"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/designCode"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/designName"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/registerPerson"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/date_application"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/date_registration"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/date_publication"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dep_1"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dep_2"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dep_3"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dep_4"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dep_5"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
