<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:background="@drawable/allline"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/allline"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_design"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_country"
                android:layout_width="35dp"
                android:layout_height="20dp" />

        <TextView
            android:id="@+id/serverIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/designNum"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/registrationNum"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/designCode"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/designName"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/registerPerson"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/date_application"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/date_registration"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date_publication"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dep_1"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dep_2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dep_3"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dep_4"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dep_5"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:visibility="gone" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
